  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand" href="<%= root_path %>">Wikin!</a>
      </div>
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="<%= new_page_path %>" class="dropdown-toggle">ページ作成</a>
        </li>
        <li class="dropdown">
          <a href="<%= pages_path %>" class="dropdown-toggle">ページ一覧</a>
        </li>
        <% if @page.present? && @page.id.present? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">ページ操作<span class="caret"></span></a>
            <ul class="dropdown-menu">
                <li><%= link_to '編集', edit_page_path(@page) %></li>
                <li><%= link_to '削除', @page, method: :delete, data: { confirm: 'ページを削除します。宜しいですか?' } %></li>
            </ul>
          </li>
        <% end %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">管理者操作<span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'ダンプデータダウンロード', admin_dump_path, data: { confirm: 'ダンプデータをダウンロードします。宜しいですか?' } %></li>
          </ul>
        </li>
      </ul>
      <span class="navbar-text navbar-right">
        <%= form_tag search_pages_path, class: "form-inline", method: :get do |_| %>
          <%= text_field '', :query, class: "form-control", placeholder: "サイト内検索", style: "width: 400px" %>
          <%= submit_tag '検索', class: "btn btn-default" %>
        <% end %>
      </span>
     </div>
  </div>
